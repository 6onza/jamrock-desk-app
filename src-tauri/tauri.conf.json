{
  "$schema": "https://raw.githubusercontent.com/tauri-apps/tauri/refs/heads/v2/crates/tauri-cli/schema.json",
  "productName": "Jamrock Admin",
  "version": "0.5.0",
  "identifier": "com.jamrockgrowshop.admin",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build:frontend",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Jamrock Admin",
        "width": 1280,
        "height": 800,
        "minWidth": 960,
        "minHeight": 640,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "center": true,
        "visible": true,
        "dragDropEnabled": true
      }
    ],
    "security": {
      "csp": "default-src 'self' 'unsafe-inline' data: blob:; connect-src 'self' https: http:; img-src 'self' https: data: blob:; style-src 'self' 'unsafe-inline'; font-src 'self' data: https:; script-src 'self' 'unsafe-inline' 'wasm-unsafe-eval'"
    }
  },
  "bundle": {
    "active": true,
    "targets": ["nsis", "msi"],
    "icon": [
      "icons/32x32.png",
      "icons/64x64.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/256x256.png",
      "icons/icon.ico",
      "icons/icon.png"
    ],
    "copyright": "© 2026 Jamrock GrowShop",
    "publisher": "Jamrock GrowShop",
    "shortDescription": "Panel de administración de escritorio para Jamrock GrowShop",
    "longDescription": "Aplicación de escritorio para la gestión integral de Jamrock GrowShop: pedidos, productos, clientes, marketing, estadísticas y más.",
    "category": "Business",
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "webviewInstallMode": {
        "type": "downloadBootstrapper"
      },
      "nsis": {
        "installMode": "currentUser",
        "displayLanguageSelector": false,
        "languages": ["Spanish", "English"],
        "headerImage": null,
        "sidebarImage": null
      }
    },
    "createUpdaterArtifacts": false
  },
  "plugins": {
    "updater": {
      "pubkey": "",
      "endpoints": [],
      "windows": {
        "installMode": "passive"
      }
    }
  }
}
